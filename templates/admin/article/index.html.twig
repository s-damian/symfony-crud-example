{% extends 'layouts/admin.html.twig' %}

{% block content %}
    <h1>
        {% trans %}article.title.index{% endtrans %}
    </h1>

    <div>
        <a href="{{ path('admin_article_create') }}">
            {% trans %}article.title.create{% endtrans %}
        </a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        {{ article.title }}
                    </td>
                    <td>
                        <a href="{{ path('admin_article_edit', {id: article.id}) }}">
                            Edit
                        </a>
                        |
                        <a href="{{ path('admin_article_delete', {id: article.id}) }}">
                            Delete
                        </a>
                        |
                        <a href="{{ path('blog_show', {slug: article.slug}) }}" target="_blank">
                            Show &#8594;
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}